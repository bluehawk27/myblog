<!-- adds title for each post w/ styling class -->
<div id="post_content">
  <h1 class="title">
    <%=@post.title%>
  </h1>

<!-- adds time post was created at -->
  <p class="date">
  Submitted <%= time_ago_in_words(@post.created_at) %> Ago

  <!-- adds post body content -->
    <p class="body">
      <%= @post.body %>
    </p>
</div>